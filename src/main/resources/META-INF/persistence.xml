<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">


    <persistence-unit name="JPA-EL-GUAPO-TOO" transaction-type="JTA">
        <jta-data-source>jdbc/Innova</jta-data-source>
        <!--Aqui van las entidades-->
        <class>com.in.nova.tech.entity.Cliente</class>
        <class>com.in.nova.tech.entity.EstadosTicket</class>
        <class>com.in.nova.tech.entity.Tecnico</class>
        <class>com.in.nova.tech.entity.Ticket</class>
        <class>com.in.nova.tech.entity.TiposServicio</class>
        <properties>
            <!-- Hibernate config -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
